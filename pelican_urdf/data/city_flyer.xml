<robot name="CityFlyer">
  
################################################################################
# LINKS                                                                        #
################################################################################

  ##### base_link ##############################################################

  <link name="base_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 3.1415"/>
      <geometry>
        <mesh filename="package://pelican_urdf/data/pelican.stl" 
              scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="blue">
        <color rgba="0.4 0.4 0.5 1.0"/>
      </material>
    </visual>
  </link>

  ##### base_footprint #########################################################

  <link name="base_footprint"/>

  ##### legs ###################################################################

  <link name="leg_1">
    <visual>
      <geometry>
       <box size="0.044 0.007 0.114"/>
      </geometry>
      <origin xyz="0.089 0.00 -0.057" rpy="0.0 0.0 0.0"/>
      <material name="g">
        <color rgba="0.2 0.25 0.25 1.0"/>
      </material>
    </visual>
  </link>

  <link name="leg_2">
    <visual>
      <geometry>
       <box size="0.044 0.007 0.114"/>
      </geometry>
      <origin xyz="-0.089 0.00 -0.057" rpy="0.0 0.0 0.0"/>
      <material name="g"/>
    </visual>
  </link>

  <link name="leg_3">
    <visual>
      <geometry>
       <box size="0.044 0.007 0.114"/>
      </geometry>
      <origin xyz="0.00 0.089 -0.057" rpy="0.0 0.0 1.5708"/>
      <material name="g"/>
    </visual>
  </link>

  <link name="leg_4">
    <visual>
      <geometry>
       <box size="0.044 0.007 0.114"/>
      </geometry>
      <origin xyz="0.00 -0.089 -0.057" rpy="0.0 0.0 1.5708"/>
      <material name="g"/>
    </visual>
  </link>

  ##### lasers #################################################################

  <link name="laser">
    <visual>
      <origin xyz="0.0 0.0 -0.056" rpy="1.5708 0.0 1.5708"/>
      <geometry>
        <mesh filename="package://pelican_urdf/data/hokuyo_utm30lx.stl" 
              scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="red">
        <color rgba="0.4 0.2 0.2 1.0"/>
      </material>
    </visual>
  </link>

  <link name="rvl"/>


################################################################################
# JOINTS                                                                       #
################################################################################

  ##### base_footprint #########################################################

  <joint name="base_link_to_base_footprint" type="fixed">
    <parent link="base_link"/>
    <child link="base_footprint"/>
    <origin xyz="0.00 0.00 -0.195" rpy="0.0 0.0 0.0"/>
  </joint>

  ##### legs ###################################################################
  
  <joint name="base_link_to_leg_1" type="fixed">
    <parent link="base_link"/>
    <child link="leg_1"/>
    <origin xyz="0.00 0.00 -0.083" rpy="0.0 0.0 0.0"/>
  </joint>

  <joint name="base_link_to_leg_2" type="fixed">
    <parent link="base_link"/>
    <child link="leg_2"/>
    <origin xyz="0.00 0.00 -0.083" rpy="0.0 0.0 0.0"/>
  </joint>

  <joint name="base_link_to_leg_3" type="fixed">
    <parent link="base_link"/>
    <child link="leg_3"/>
    <origin xyz="0.00 0.00 -0.083" rpy="0.0 0.0 0.0"/>
  </joint>

  <joint name="base_link_to_leg_4" type="fixed">
    <parent link="base_link"/>
    <child link="leg_4"/>
    <origin xyz="0.00 0.00 -0.083" rpy="0.0 0.0 0.0"/>
  </joint>

  ##### laser ##################################################################

  <joint name="base_link_to_laser" type="fixed">
    <parent link="base_link"/>
    <child link="laser"/>
    <origin xyz="0.00 0.00 0.12" rpy="0.0 0.0 0.0"/>
  </joint>

  ##### right virtual laser ####################################################

  <joint name="laser_to_rvl" type="fixed">
    <parent link="laser"/>
    <child link="rvl"/>
    <origin xyz="-0.0474 -0.0474 0.0670" rpy="1.5708 -0.7854 -0.7854"/>
  </joint>

</robot>


